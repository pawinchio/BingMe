<form action="/" method="post">
    <div class="modal-body" style="color: darkgray;">
        <p style="text-align: center;">Eater Data</p>
        


        <div class="form-group">
	         <div class="row">
                <div class="col-lg-4 col-sm-12">
                    <!-- insert image -->
                    <img src="" height="200" alt="Image preview...">
                    <p><input type="file" onchange="previewFile()"accept="image/png, image/jpeg"><br>
                    <input class="favorite styled"type="button"value="delete photo"> </p>
                    <!-- newwwww -->
                    <!-- <input class="favorite styled"type="button"value="delete photo">    
                    <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg"> -->
                    <!-- ******** -->
                    <p>
                    <label for="CREDIT-NUMBER" style="color: #00FF89">CREDIT/DEBIT CARD NUMBER</label>
                    <input style="border-radius: 20px; border: none;" type="number"  class="form-control" id="CREDIT-NUMBER" name="CREDIT-NUMBER"min="16" placeholder="card must have  16  number"required >                    
                    <!-- card must have  16  number --></p>
                    <p id="errorArea"></p>
                    <label style="color: #00FF89">HOLDER NAME</label>
                    <input style="border-radius: 20px; border: none;"  class="form-control" id="CREDIT-NAME" name="CREDIT-NAME" placeholder="CREDIT-NAME" required>
                            <div class="row"style ="border-style: solid;border-bottom-color: black">
                                <div class="column">
                                        <p><label style="color: #00FF89">EXPIRATION</label></p>
                                        <p><select name="expire-month"required>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                                <option value="7">7</option>
                                                <option value="8">8</option>
                                                <option value="9">9</option>
                                                <option value="10">10</option>
                                                <option value="11">11</option>
                                                <option value="12">12</option>
                                            </select>
                                            <select name="expire-year"required>
                                                <option value="2025">2025</option>
                                                <option value="2024">2024</option>
                                                <option value="2023">2023</option>
                                                <option value="2022">2022</option>
                                                <option value="2021">2021</option>
                                                <option value="2020">2020</option>
                                                <option value="2019">2019</option>
                                                <option value="2018">2018</option>
                                            </select></p>
                                </div>
                                <div class="column" >
                                            <p><label style="color: #00FF89"> CVV </label>
                                                <input style="border-radius: 20px; border: none;"  type="number" class="form-control" id="CVV" name="CVV" min="000" max="999" placeholder="cvv" required></p>
                                                <!-- edit number of cvv to under 999 -->
                                </div>
                            </div>
                            <!-- css under line -->
                            
                            <div class="row">
                                <div class="column">
                                        <label style="color: #00FF89"> BILLING ADDRESS         </label>
                                </div>
                                <div class="column">
                                    <input type="checkbox" name="checkbox" value="checkbox"> SAME AS ADDRESS<br>
                                </div>
                                    <!-- check  -->
                                    <input style="border-radius: 20px; border: none;"  class="form-control" id="BILLING-ADDRESS" name="BILLING-ADDRESS" placeholder="BILLING-ADDRESS" required>
                            </div>
		      </div>  
                    <div class="col-lg-8 col-sm-12">
                                <div class="row">
                                    <div class="column">
                                        <label style="color: #00FF89">FIRSTNAME</label>
                                        <input style="border-radius: 20px; border: none;" type="text" class="form-control" id="firstname" name="name" placeholder="firstname" required>
                                    </div>
                                    <div class="column">
                                        <label style="color: #00FF89">LASTNAME</label>
                                        <input style="border-radius: 20px; border: none;"  type="text"class="form-control" id="lastname" name="lastname" placeholder="lastname" required>
                                    </div>
                                </div>
                                <div>
                                    <label style="color: #00FF89">PHONE</label>
                                    <input style="border-radius: 20px; border: none;"  class="form-control" type="number"  id="phone" name="phone" placeholder="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                                    <!-- phone must be 10 number -->
                                </div>
                                <div class="row">
                                    <div class="column">
                                        <label style="color: #00FF89">GENDER</label>
                                        <input style="border-radius: 20px; border: none;"  class="form-control" id="gender" name="gender" name="name" placeholder="gender"required>
                                    </div>
                                    <div class="column">
                                        <p><label style="color: #00FF89">BIRTHDAY</label></p>
                                        <input type="date" id="start" name="birth-daybr" value="2018-07-22"  min="1980-01-01" max="2018-12-31"required>
                                    </div>
                                </div>
                                <p>
                                <label style="color: #00FF89">ADDRESS</label>
                                </p>
                                <input style="border-radius: 200px; border: none;"  class="form-control" id="ADDRESS" name="ADDRESS" placeholder="ADDRESS" required>
                                 <!-- css under line -->
                                
                                <div  style ="border-style: solid;border-top-color: black">
                                            <label for="emailToVerify"style="color: #00FF89">Email address</label>
                                            <input style="border-radius: 20px; border: none;" type="email" class="form-control" id="emailToVerify" name="email" value=<%- user.email.toUpperCase() %> readonly>
                                            <label style="color: #00FF89"> PASSWORD</label>
                                            <input style="border-radius: 20px; border: none;" type="password" id="password" name="password" min="6" required class="form-control" name="password" required> 
                                </div>
                                <div>
                                    <button class="modal-footer" type="submit">
                                            <div><i data-feather="log-in" class="login-icon"></i>  SUBMIT PROFILE </div>
                                        </button>
                                </div>
                    </div>

		       

	        </div>
        </div>
    



    </div>
    
</form>



