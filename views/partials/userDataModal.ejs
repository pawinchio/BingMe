<div class='modal show full-modal' id='userDataModal' role='dialog'>
    <div class='modal-dialog' style="width: 90%; max-width: 90%">
        <div class="modal-content" >
            <div class="modal-header d-flex justify-content-between">
                <div class="p-2" style="width: 30px;height: 30px;">
                    <form action="/logout" method="post">
                        <button style="background: none;border: none;"><i data-feather="arrow-left" style="width: 30px;height: 30px;"></i></button>
                    </form>
                </div>
                <h5 class="modal-title p-2" style="font-size: 1.5rem;">ตั้งค่าบัญชีของคุณ</h5>
                <div class="p-2" style="padding: 0!important; width: 20px;"></div>
            </div>
            <%if(user){%>
                <%if(user.role=='Eater'){%>
                    <% include firstEaterDataForm %>
                <%} else if(user.role=='Hunter'){%>
                    <% include hunterDataModal %>
                <%}%>
            <%}%>

        </div>
    </div>
</div>

<% if(user) {%>
    <% if(user.userDataId == null) {%>
        <script>
            $(document).ready(function(){
                $('#userDataModal').modal('show');
            });
        </script>
    <%}%>
<%}%>
