<div class="overlay"></div>

<script>
    <%if(user){%>
        $('#logoutBtn').show();
        $('#registerBtn').hide();
        $('#loginBtn').hide();
    <%}%>
    const logout = () =>{
        $('#logoutForm').submit();
    }
</script>