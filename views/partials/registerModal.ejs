<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-register" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="register">สมัครสมาชิก</h5>
            <i data-dismiss="modal" aria-label="Close" data-feather="x" class="close"></i>
        </div>
        <form id='forms' action='/register' method='post'>
            <div class="modal-body" id='registerForm'>
                <div class="form-group">
                    <label for="registerUsername">Username</label>
                    <input type="text" class="form-control" id="registerUsername" name="username" placeholder="Enter username" min="6" required>
                    <p id="errorArea"></p>
                </div>
                <div class="form-group">
                    <label for="registerPassword">Password</label>
                    <input type="password" class="form-control" id="registerPassword" placeholder="Password" min="6" required>
                    <p id="errorArea"></p>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Re-enter Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="password" placeholder="Re-enter password" min="6" required>
                    <p id="errorArea"></p>
                </div>
                <div class="form-group">
                    <label for="registerEmail">Email Address</label>
                    <input type="email" class="form-control" id="registerEmail" name="registerEmail" placeholder="Email" required>
                    <p id="errorArea"></p>
                </div>
                <div class="form-group">
                    <label for="registerPhone">Phone Number</label>
                    <input type="number" class="form-control" id="registerPhone" name="registerPhone" placeholder="Phone number" required>
                    <p id="errorArea"></p>
                </div>
                <div class="form-group">
                    <label for="registerRole">I'm a:</label>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons" id="registerRole">
                        <label class="btn btn-secondary btn-sm active">
                            <input type="radio" name="role" value="Eater" autocomplete="off" checked> Eater
                        </label>
                        <label class="btn btn-secondary btn-sm ">
                            <input type="radio" name="role" value="Hunter" autocomplete="off"> Hunter
                        </label>
                    </div>
                    <p id="errorArea"></p>
                </div>
                <div class="input-group-text">
                    <input type="checkbox" id="registerTerm" required>
                    <p>Accept our <a>Terms & Conditions</a></p>
                </div>
            </div>
            <button class="modal-footer" id='submitRegister' type="submit">
                <div><i data-feather="book-open" class="login-icon"></i>  SUBMIT</div>
            </button>
        </form>
    </div>
  </div>
</div>

<script src='js/form-validation.js'></script>